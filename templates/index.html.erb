<html>
<head>
  <title>Family Info</title>

  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
<div class="min-h-screen bg-slate-50 p-6">
  <div class="mx-auto max-w-5xl">
    <div class="grid gap-6 sm:grid-cols-2">
      <!-- Weather -->
      <section class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900">Weather</h2>
        <div class="mt-3 text-sm text-slate-600">
          <p>Temp: —</p>
          <p>Wind: —</p>
        </div>
      </section>

      <!-- Bindicator -->
      <section class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <div class="flex-1">
              <p class="text-sm text-slate-900">Bin day</p>
            </div>
            <div>
              <p class="text-xl font-semibold text-slate-900"><%= @bindicator.next_bin_day_words %></p>
            </div>
          </div>
          <div>
            <div class="flex flex-row items-center space-x-4">
              <% @bindicator.bins_for_next_collection.each do |n| %>
                <div>
                  <img src="images/bins/<%= n.downcase %>-bin.png" alt="<%= n %> bin" class="h-16 mr-2"/>

                  <div class="flex-1"><%= n %></div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </section>

      <!-- Trains -->
      <section class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900">Trains</h2>
        <div class="mt-3 text-sm text-slate-600">
          <p>Next train: —</p>
          <p>Status: —</p>
        </div>
      </section>

      <!-- Restaurants -->
      <section class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900">Restaurants</h2>
        <div class="mt-3 text-sm text-slate-600">
          <p>Top pick: —</p>
          <p>Backup: —</p>
        </div>
      </section>
    </div>
  </div>
</div>

</body>
</html>