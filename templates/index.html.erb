<html>
<head>
  <title>Family Info</title>

  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
<div class="min-h-screen bg-slate-50 p-6">
  <div class="mx-auto max-w-5xl">
    <div class="grid gap-6 sm:grid-cols-2">
      <!-- Weather -->
      <section class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900">Weather</h2>
        <div class="mt-3 text-sm text-slate-600">
          <p>Temp: —</p>
          <p>Wind: —</p>
        </div>
      </section>

      <!-- Bindicator -->
      <section class="rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">

        <header class="rounded-t-2xl bg-sky-100 px-5 py-2">
          <h2 class="text-lg font-semibold text-sky-900">Bins</h2>
        </header>

        <div class="flex-col">
          <div class="flex flex-row p-4">
            <div class="w-38">
              <div class="flex-1">
                <p class="text-sm text-slate-900">Next collection</p>
              </div>
              <div>
                <p class="text-xl font-semibold text-slate-900"><%= @bindicator.next_bin_day_words %></p>
              </div>
            </div>
            <div>
              <div class="flex flex-row items-center space-x-6">
                <% @bindicator.bins_for_next_collection.each do |color| %>
                  <div>
                    <img src="images/bins/<%= color.downcase %>-bin.png" alt="<%= color %> bin" class="h-16 mr-2"/>

                    <div class="text-sm text-center "><%= color %></div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Trains -->
      <section class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900">Trains</h2>
        <div class="mt-3 text-sm text-slate-600">
          <p>Next train: —</p>
          <p>Status: —</p>
        </div>
      </section>

      <!-- Restaurants -->
      <section class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900">Restaurants</h2>
        <div class="mt-3 text-sm text-slate-600">
          <p>Top pick: —</p>
          <p>Backup: —</p>
        </div>
      </section>
    </div>
  </div>
</div>

</body>
</html>