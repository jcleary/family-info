<!-- Restaurants -->
<section class="rounded-2xl border border-blue-800 shadow-sm overflow-hidden">
  <header class="rounded-t-2xl px-5 py-2 bg-blue-800">
    <h2 class="text-lg font-semibold text-white">Restaurants</h2>
  </header>

  <div class="px-4 py-2">
    <div class="font-semibold text-sm">
      Opened Today:
    </div>
    <% @restaurants.open.each do |name|
      name %>
      <div class="px-4 grid text-sm ">
        <%= name %>
      </div>
    <% end %>

  </div>
</section>
